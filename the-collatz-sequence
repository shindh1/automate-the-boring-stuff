inputNumber = input("Enter a number: ")
number = int(inputNumber)

def collatz(number):
    while number != 1:
        if number % 2 == 1:
            number = 3 * number + 1
            print(str(number))
        else:
            number = number // 2
            print(str(number))

collatz(number)
